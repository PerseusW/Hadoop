	javac -Xlint -classpath ${HadoopClassPath}:${HBaseClassPath} code/*.java -d ./

start:
	rm -rf /tmp/h*
	${HD}/bin/hdfs namenode -format
	${HD}/sbin/start-dfs.sh
	${HD}/sbin/start-yarn.sh
	${HB}/bin/start-hbase.sh

stop:
	${HB}/bin/stop-hbase.sh
	${HD}/sbin/stop-dfs.sh
	${HD}/sbin/stop-yarn.sh	

